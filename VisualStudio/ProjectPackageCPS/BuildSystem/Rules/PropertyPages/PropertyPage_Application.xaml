<?xml version="1.0" encoding="utf-8"?>
<Rule 
	Name="Application"
	DisplayName="Application"
    	Order="1"
	PageTemplate="generic"
	Description="Application properties"
	xmlns="http://schemas.microsoft.com/build/2009/properties">

    <Rule.Categories>
    <Category Name="General" Description="General" DisplayName="General" />
    <Category Name="Resources" Description="Resources" DisplayName="Resources" />
  </Rule.Categories>

    <Rule.DataSource>
    <DataSource Persistence="ProjectFile"
                SourceOfDefaultValue="AfterContext"
                HasConfigurationCondition="False" />
    </Rule.DataSource>
    <StringProperty Name="AssemblyName" DisplayName="Assembly Name" Category="General" Description="File Name of the output assembly"/>


    <StringProperty Name="RootNamespace" DisplayName="Root namespace" Category="General" 
    	Description="This name will be used when generating new source files and will be added to classes without namespace when you select the /ns compiler switch" />

    <DynamicEnumProperty Name="TargetFrameworkMoniker"
                       DisplayName="Target framework"
                       Category="General"
                       EnumProvider="SupportedTargetFrameworksEnumProvider"
                       MultipleValuesAllowed="False">
    <DynamicEnumProperty.DataSource>
      <DataSource PersistedName="TargetFrameworkMoniker"
                  Persistence="ProjectFileWithInterception" />
    </DynamicEnumProperty.DataSource>
  </DynamicEnumProperty>

  <EnumProperty Name="OutputType" DisplayName="Output type" Category="General">
    <EnumValue Name="Library" DisplayName="Class Library" /> 
    <EnumValue Name="Exe" DisplayName="Console Application" /> 
      <EnumValue Name="WinExe" DisplayName="Windows Application" />
  </EnumProperty>

  <DynamicEnumProperty Name="StartupObject"
                       DisplayName="Startup object"
                       Category="General"
                       EnumProvider="StartupObjectsEnumProvider" />

    <StringProperty Name="ApplicationIcon" DisplayName="Application Icon" Category="Resources"   />

  <EnumProperty Name="ApplicationManifest"
                DisplayName="Manifest"
                Category="Resources" >
    <EnumProperty.DataSource>
      <DataSource HasConfigurationCondition="false"
                  PersistedName="ApplicationManifest"
                  Persistence="ProjectFileWithInterception" />
    </EnumProperty.DataSource>
    <EnumValue Name="NoManifest"
               DisplayName="Create application without a manifest" />
    <EnumValue Name="DefaultManifest"
               DisplayName="Embed manifest with default settings" />
  </EnumProperty>


    <EnumProperty Name="Dialect" DisplayName="Dialect" Category="General" Default="Core" 
    	Description="Select the compiler dialect to use when compiling this project">
        <EnumValue Name="Core"      DisplayName="Core" />
        <EnumValue Name="VO"        DisplayName="Visual Objects" />
        <EnumValue Name="Vulcan"    DisplayName="Vulcan.NET" />
        <EnumValue Name="Harbour"   DisplayName="Harbour" />
        <EnumValue Name="Xpp"       DisplayName="Xbase++" />
        <EnumValue Name="Foxpro"    DisplayName="Microsoft FoxPro" />
     <EnumProperty.DataSource>
      <DataSource HasConfigurationCondition="false"
                  PersistedName="Dialect"
                  Persistence="ProjectFileWithInterception" />
    </EnumProperty.DataSource>
   	
   </EnumProperty>



  <StringProperty Name="Win32Resource"
                  DisplayName="Resource file"
                  Category="Resources"
                  Subtype="file" />
</Rule>

    